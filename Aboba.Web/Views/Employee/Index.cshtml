@model IEnumerable<Employee>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Employee List</h2>
        </div>
        <div class="col-6" style="text-align:right">
            <a class="btn btn-primary" asp-action="Create">
                <i class="fa-solid fa-plus"></i> Add New Employee
            </a>
        </div>
    </div>
    <br/>

    @if (Model.Any())
    {
        <table class="table table-bordered table-striped" width="100%">
            <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Name
                </th>
                <th>
                    This month's salary
                </th>
                <th></th>
            </tr>
            </thead>
            <tbody id="productTableBody">
            @foreach (var item in Model)
            {
                <tr>
                    <td width="25%">@item.Id</td>
                    <td width="25%">@item.Name</td>
                    <td width="25%">@item.Salary</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a class="btn btn-primary mx-2" asp-route-Id="@item.Id" asp-action="Edit">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </a>
                            <a class="btn btn-danger mx-2" asp-route-Id="@item.Id" asp-action="Delete">
                                <i class="fa-solid fa-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p>No employees found.</p>
    }
</div>