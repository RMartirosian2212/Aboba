@model IEnumerable<Order>

@{
    ViewBag.Title = "Last month orders";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Orders from Previous Month</h2>
        </div>
        <div class="col-6" style="text-align:right">
            <form asp-action="DeleteOrdersFromPreviousMonth" method="post">
                <button type="submit" class="btn btn-danger">
                    <i class="fa-solid fa-trash"></i> Delete All Orders from Previous Month
                </button>
            </form>
        </div>
    </div>
    <br/>

    @if (Model.Any())
    {
        <table class="table table-bordered table-striped" width="100%">
            <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Total Price</th>
                <th>Upload Date</th>
                <th>Last Change</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Title</td>
                    <td>@item.TotalPrice</td>
                    <td>@item.UploadDate</td>
                    <td>@item.LastChange</td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p>No orders found for the previous month.</p>
    }
</div>