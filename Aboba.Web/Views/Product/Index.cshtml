@model IEnumerable<Product>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6" style="text-align:right">
            <a class="btn btn-primary" asp-action="Create">
                <i class="fa-solid fa-plus"></i> Create new product
            </a>
        </div>
    </div>
    <br />

    <div class="form-group">
        <div class="input-group mb-3">
            <input type="text" class="form-control" placeholder="Search..." id="searchString">
            <div class="input-group-append">
                <button type="button" class="btn btn-outline-primary" onclick="searchProducts()">Search</button>
            </div>
        </div>
    </div>

    @if (Model.Any())
    {
    <table class="table table-bordered table-striped" width="100%">
        <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Price
            </th>
            <th>
                Created At
            </th>
            <th>
                Last Change
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody id="productTableBody">
        @foreach (var item in Model)
        {
        <tr>
            <td width="10%">
                @item.Id
            </td>
            <td width="18%">
                @item.Name
            </td>
            <td width="18%">
                @item.Price
            </td>
            <td width="18%">
                @item.CreatedAt
            </td>
            <td width="18%">
                @item.LastChange
            </td>
            <td class="text-center">
                <div class="w-75 btn-group" role="group">
                    <a class="btn btn-primary mx-2" asp-route-Id="@item.Id" asp-action="Edit"><i class="fa-solid fa-pen-to-square"></i></a>
                    <a class="btn btn-danger mx-2" asp-route-Id="@item.Id" asp-action="Delete"><i class="fa-solid fa-trash"></i></a>
                </div>
            </td>
        </tr>
        }
        </tbody>
    </table>
    }
    else
    {
    <p>No products found.</p>
    }
</div>

@section Scripts {
<script>
    function searchProducts() {
        var searchString = document.getElementById("searchString").value.trim().toLowerCase();
        var rows = document.getElementById("productTableBody").getElementsByTagName("tr");

        for (var i = 0; i < rows.length; i++) {
            var id = rows[i].getElementsByTagName("td")[0];
            var name = rows[i].getElementsByTagName("td")[1];

            if (id.innerText.trim().toLowerCase().includes(searchString) ||
                name.innerText.trim().toLowerCase().includes(searchString)) {
                rows[i].style.display = "";
            } else {
                rows[i].style.display = "none";
            }
        }
    }
</script>
}
